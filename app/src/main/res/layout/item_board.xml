<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/offWhite">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/board_image_rv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="@dimen/nav_content_margin_StartEnd"
            android:src = "@drawable/baseline_image_24"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="@dimen/nav_image_circular_border_width"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/offWhite"
            >

            <TextView
                android:id="@+id/board_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                tools:text="title"/>

            <TextView
                android:id="@+id/created_by_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/black"
                tools:text="created by:"/>


        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_divider_height"
        android:layout_marginTop="@dimen/nav_divider_height"
        android:background="@color/black"/>

</LinearLayout>